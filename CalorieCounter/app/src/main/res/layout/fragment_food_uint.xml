                    android:layout_width="0dip"
                    android:layout_weight="5"
                    android:layout_height="@dimen/imageSize"
                    android:text="Veggies"
                    android:id="@+id/Veggiestv"
                    android:gravity="center"
                    android:textSize="30dip"
                    android:textStyle="bold" />
                <ImageView
