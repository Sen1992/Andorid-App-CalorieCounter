                    android:layout_height="25dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:id="@+id/SnackTip"
                    android:src="@drawable/tip"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/breadTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_login_div">

                <ImageView
                    android:layout_width="@dimen/imageSize"
                    android:layout_height="@dimen/imageSize"
                    android:id="@+id/imageBread"
                    android:src="@drawable/bread"/>

                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="5"
                    android:layout_height="@dimen/imageSize"
                    android:text="Bread"
                    android:id="@+id/Breadtv"
                    android:gravity="center"
                    android:textSize="30dip"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="25dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:id="@+id/BreadTip"
                    android:src="@drawable/tip"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cakeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_login_div">

                <ImageView
                    android:layout_width="@dimen/imageSize"
                    android:layout_height="@dimen/imageSize"
                    android:id="@+id/imageCake"
                    android:src="@drawable/cake"/>

                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="5"
                    android:layout_height="@dimen/imageSize"
                    android:text="Cake"
                    android:id="@+id/Caketv"
                    android:gravity="center"
                    android:textSize="30dip"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="25dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:id="@+id/CakeTip"
                    android:src="@drawable/tip"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fruitTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_login_div">

                <ImageView
                    android:layout_width="@dimen/imageSize"
                    android:layout_height="@dimen/imageSize"
                    android:id="@+id/imageFruit"
                    android:src="@drawable/fruit"/>

                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="5"
                    android:layout_height="@dimen/imageSize"
                    android:text="Fruit"
                    android:id="@+id/fruittv"
                    android:gravity="center"
                    android:textSize="30dip"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="0dip"
                    android:layout_height="25dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:id="@+id/fruittip"
                    android:src="@drawable/tip"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/veggiesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background_login_div">

                <ImageView
                    android:layout_width="@dimen/imageSize"
                    android:layout_height="@dimen/imageSize"
                    android:id="@+id/imageVeggies"
