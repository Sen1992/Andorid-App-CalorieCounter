        android:id="@+id/item"
        android:layout_gravity="center_horizontal"
        android:textColor="#4a1414"
        android:textSize="30dip"
        android:textStyle="bold"
        android:textColorHighlight="#c5a6a6"
        android:layout_margin="10dip" />
</LinearLayout>