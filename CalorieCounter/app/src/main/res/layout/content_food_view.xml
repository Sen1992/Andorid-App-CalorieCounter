<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FoodViewActivity"
    tools:showIn="@layout/activity_food_view"
    android:orientation="vertical"
    android:background="@drawable/foodtest">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/foodItem"
        android:textSize="30dip"
        android:textIsSelectable="true"
        android:textColor="#be3131" />

    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dip"
        >

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:id="@+id/pb1"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="150dip"
            android:layout_height="150dip"
            android:id="@+id/imageFood"
            android:visibility="gone"/>

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pb2" />
        <TextView
            android:layout_marginLeft="30dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:visibility="gone"
            android:id="@+id/FoodDescruiption"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Fat:"
                android:id="@+id/fattv"
                android:textSize="30dip"
                android:textIsSelectable="true" />
            <TextView
                android:layout_width="0dip"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/fat"
                android:textSize="30dip"
                android:textIsSelectable="true" />


        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Calorie:"
                android:id="@+id/calorietv"
                android:textSize="30dip"
                android:textIsSelectable="true" />
            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/calorie"
                android:textSize="30dip"
                android:textIsSelectable="true" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dip"
        android:gravity="center">
        <EditText
            android:layout_width="60dip"
            android:layout_marginRight="40dip"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/num" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:id="@+id/Add" />
    </LinearLayout>

</LinearLayout>
