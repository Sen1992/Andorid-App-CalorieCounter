<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aim">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dip"
        android:text="Calorie Goal Seting"
        android:id="@+id/goalTitle"
        android:textSize="24dip"
        android:layout_gravity="center_horizontal"
        android:textColor="#481313"
        android:shadowColor="#e9d9d9"
        android:textStyle="bold|italic" />
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/displayGoal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dip">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dip">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Your Goal Calorie :"
                android:id="@+id/Goal"
                android:layout_marginLeft="40dip" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/goalEdit"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modify"
            android:id="@+id/modifyButton"
            android:layout_marginRight="30dip"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:id="@+id/submitButton"
            android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dip">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Calorie Goal in the past days"
                android:textSize="25dip"
                android:textStyle="bold|italic"
                android:textColor="#9f0d82"
                android:layout_marginBottom="10dip"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gl"
                android:layout_gravity="center">

            </ListView>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>