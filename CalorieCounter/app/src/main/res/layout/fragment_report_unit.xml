<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Track Calorie"
        android:padding="5dip"
        android:id="@+id/textView2"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="30dip"
        android:textStyle="bold|italic"
        android:background="#c58c8c"
        android:textColor="#160505" />
    <LinearLayout
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/reportMargin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Calorie Goal is:"
            android:id="@+id/MyGoal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/GoalText"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/reportMargin">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/goalPie"
            android:layout_width="match_parent"
            android:layout_height="150dip"
            android:layout_gravity="center_horizontal">
        </com.github.mikephil.charting.charts.PieChart>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/remainingText"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="25dip"
            android:textColor="#9c0e0e" />
        <TextView
            android:layout_marginLeft="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Remianming Today"
            android:id="@+id/remainingLabel"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="25dip"
            android:textColor="#f2e5e5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dip"
        android:gravity="center">
        <TextView
            android:layout_marginLeft="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="You took "
            android:id="@+id/You"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="25dip"
            android:textColor="#f2e5e5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/StepTotalView"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="25dip"
            android:textColor="#630a0a" />
        <TextView
            android:layout_marginLeft="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="steps today"
            android:id="@+id/StepTotalLable"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="25dip"
            android:textColor="#f2e5e5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/TrackListPadding"
            android:layout_marginTop="@dimen/margin1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/consume"
                android:layout_marginBottom="@dimen/Innermargin"
                android:textColor="#17774f"
                android:textSize="40dip"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Consumed"
                android:id="@+id/consumedtv" />
        </LinearLayout>



        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/TrackListPadding"
            android:layout_marginTop="@dimen/margin1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/burned"
                android:layout_marginBottom="@dimen/Innermargin"
                android:textColor="#5e5d93"
                android:textSize="40dip"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Burned"
                android:id="@+id/burntv" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/TrackListPadding"
            android:layout_marginTop="@dimen/margin1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/net"
                android:layout_marginBottom="@dimen/Innermargin"
                android:textColor="#fcbf1818"
                android:textSize="40dip"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Net"
                android:id="@+id/nettv" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="20dip">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate"
            android:id="@+id/Generate" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/reporttest"
        android:scaleType="fitXY"/>
</LinearLayout>
